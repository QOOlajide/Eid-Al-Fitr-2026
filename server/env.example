# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eid_website
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_CHAT_MODEL=gemini-3-pro-preview
# Used in order if GEMINI_CHAT_MODEL is unavailable for your key / endpoint.
GEMINI_FALLBACK_MODELS=gemini-3-flash-preview,gemini-2.5-pro
GEMINI_EMBED_MODEL=gemini-embedding-001
# Optional: request a smaller embedding size (leave blank for default)
GEMINI_EMBED_OUTPUT_DIM=

# Qdrant (Vector DB) Configuration
QDRANT_URL=http://localhost:6333
QDRANT_CHECK_COMPATIBILITY=true
QDRANT_RECREATE_COLLECTION_ON_MISMATCH=false
RAG_VECTOR_COLLECTION=islamic_chunks
RAG_RETRIEVER=vector
RAG_TOP_K=6
RAG_MIN_CHUNK_CHARS=200

# Automatic indexing (fixed knowledge base)
# Sources come from server/rag_sources.json by default (or set RAG_SOURCES_FILE).
RAG_AUTO_INDEX=true
RAG_INGEST_ON_STARTUP=true
RAG_INGEST_INTERVAL_MINUTES=1440
RAG_SOURCES_FILE=
RAG_SEED_URLS=
RAG_MAX_PAGES=50
RAG_CRAWL_DELAY_MS=500
RAG_FOLLOW_LINKS=true

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
